     <script type="text/javascript">
        $(document).ready(function(){
            function loading_show(){
                $('#loading').html("<img src='http://www.drdvietnam.org/'/>").fadeIn('fast');
            }
            function loading_hide(){
                $('#loading').fadeOut('fast');
            }                
            function loadData(page){
                loading_show();                    
                $.ajax
                ({
                    type: "POST",
                    url: "tiepcan/chitiettintuc_data.php",
                    data: "page="+page,
                    success: function(msg)
                    {
                        $("#thuong").ajaxComplete(function(event, request, settings)
                        {
                            loading_hide();
                            $("#thuong").html(msg);
                        });
                    }
                });
            }
                loadData(1);  // For first time page load default results
                $('#paging_button2 li.mo').live('click',function(){
                    var page = $(this).attr('p');
                    loadData(page);
                    
                });   
                
                function loadData1(pagee){
                    loading_show();                    
                    $.ajax
                    ({
                        type: "POST",
                        url: "tiepcan/chitiettintuc1_data.php",
                        data: "pagee="+pagee,
                        success: function(msgg)
                        {
                            $("#thuong1").ajaxComplete(function(event, request, settings)
                            {
                                loading_hide();
                                $("#thuong1").html(msgg);
                            });
                        }
                    });
                }
                loadData1(1);  // For first time page load default results
                $('#paging_button2 li.moo').live('click',function(){
                    var pagee = $(this).attr('p');
                    loadData1(pagee);
                    
                });      
                
                function loadData2(pageee){
                    loading_show();                    
                    $.ajax
                    ({
                        type: "POST",
                        url: "tiepcan/binhluanbv_data.php",
                        data: "pageee="+pageee,
                        success: function(msggg)
                        {
                            $("#thuong2").ajaxComplete(function(event, request, settings)
                            {
                                loading_hide();
                                $("#thuong2").html(msggg);
                            });
                        }
                    });
                }
                loadData2(1);  // For first time page load default results
                $('#paging_button2 li.mooo').live('click',function(){
                    var pageee = $(this).attr('p');
                    loadData2(pageee);
                    
                });      
            });
        </script>  
        
